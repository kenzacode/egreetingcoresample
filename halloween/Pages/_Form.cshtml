@model halloween.Model.Greetings


<form method="post">

    <input type="hidden" asp-for="@Model.ID" />
    <div class="form-header">Knock Knock...</div>
    <div class="form-body">

        <div class="form-group">
            <label asp-for="@Model.toName"></label>

            <input asp-for="@Model.toName" type="text" class="form-control" maxlength="25" />
            <span asp-validation-for="@Model.toName" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        <div class="form-group">
            <label asp-for="@Model.toEmail"></label>

            <input type="email" asp-for="@Model.toEmail" class="form-control" maxlength="40" />
            <span asp-validation-for="@Model.toEmail" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        <div class="form-group">
            <label asp-for="@Model.subject"></label>

            <input type="text" asp-for="@Model.subject" class="form-control" maxlength="50" />
            <span asp-validation-for="@Model.subject" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        <div class="form-group">
            <label asp-for="@Model.mesg"></label>

            <textarea asp-for="@Model.mesg" class="form-control" maxlength="140"></textarea>
            <span asp-validation-for="@Model.mesg" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        <div class="form-group">
            <label asp-for="@Model.fromName"></label>

            <input type="text" asp-for="@Model.fromName" class="form-control" maxlength="25" />
            <span asp-validation-for="@Model.fromName" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        <div class="form-group">
            <label asp-for="@Model.fromEmail"></label>

            <input type="email" asp-for="@Model.fromEmail" class="form-control" maxlength="40" />
            <span asp-validation-for="@Model.fromEmail" class="text-danger"></span>
            <div class="countdown"></div>

        </div>

        @*<div class="form-group">
                <label asp-for="bridgeGreetings.fromEmail" class="col-2"><input type="checkbox" asp-for="bridgeGreetings.agree" class="form-control" /></label>
                <span asp-validation-for="bridgeGreetings.agree" class="text-danger"></span>
            </div>*@

        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6Lc2SjYUAAAAAIroVb2qH0adzWVVXU49-d8KUezI"></div>
            <span asp-validation-for="@Model.reCaptcha" class="text-danger"></span>
        </div>

        <div class="form-footer">
            <input type="submit" value="Preview" class="submitbutton" />
        </div>

    </div>




</form>




