@model IndexModel
    


<form method="post">
    <div class="panel">
        <div class="panel-header">Please complete the form below.</div>
        <div class="panel-body">
            <div class="to">
                <div class="form-group">
                    <label asp-for="bridgeGreetings.toName" class="col-2"></label>
                    <div class="col-10">
                        <input asp-for="bridgeGreetings.toName" type="text" class="form-control" maxlength="100" />
                        <span asp-validation-for="bridgeGreetings.toName" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.toEmail" class="col-2"></label>
                    <div class="col-10">
                        <input type="email" name="bridgeGreetings.toEmail" class="form-control" maxlength="100" />
                        <span asp-validation-for="bridgeGreetings.toEmail" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>
            </div>



            <div class="custom">
                <div class="form-group">
                    <label class="col-2" asp-for="bridgeGreetings.subject"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.subject" placeholder="" class="form-control" maxlength="100" />
                        <span asp-validation-for="bridgeGreetings.subject" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.mesg" class="col-2"></label>
                    <div class="col-10">
                        <textarea asp-for="bridgeGreetings.mesg" class="form-control" placeholder="Personalize your message here." maxlength="140"></textarea>
                        <span asp-validation-for="bridgeGreetings.mesg" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>

            </div>



            <div class="from">
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromName" class="col-2"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.fromName" class="form-control" />
                        <span asp-validation-for="bridgeGreetings.fromName" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromEmail" class="col-2"></label>
                    <div class="col-10">
                        <input type="email" asp-for="bridgeGreetings.fromEmail" class="form-control" />
                        <span asp-validation-for="bridgeGreetings.fromEmail" class="text-danger"></span>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromEmail" class="col-2"><input type="checkbox" asp-for="bridgeGreetings.agree" class="form-control" /></label>
                    <span asp-validation-for="bridgeGreetings.agree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="6Lc2SjYUAAAAAIroVb2qH0adzWVVXU49-d8KUezI"></div>
                    <span asp-validation-for="bridgeGreetings.reCaptcha" class="text-danger"></span>
                </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Next" class="btn btn-primary" />
            <a href="/">Start Over</a>
        </div>
    </div>




</form>




