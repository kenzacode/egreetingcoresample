@model PreviewModel


<div class="panel">
    <div class="panel-header">Please confirm the information below.</div>
    <div class="panel-body">
        <div class="to">
            <div class="form-group">
                <label asp-for="bridgeGreetings.toName" class="col-2"></label>
                <div class="col-10">
                    @Html.Raw(Model.bridgeGreetings.toName)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="bridgeGreetings.toEmail" class="col-2"></label>
                <div class="col-10">
                    @Html.Raw(Model.bridgeGreetings.toEmail)
                </div>
            </div>



            <div class="custom">
                <div class="form-group">
                    <label class="col-2" asp-for="bridgeGreetings.subject"></label>
                    <div class="col-10">
                        @Html.Raw(Model.bridgeGreetings.subject)
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.mesg" class="col-2"></label>
                    <div class="col-10">
                        @Html.Raw(Model.bridgeGreetings.mesg)
                    </div>
                </div>

            </div>



            <div class="from">
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromName" class="col-2"></label>
                    <div class="col-10">
                        @Html.Raw(Model.bridgeGreetings.fromName)
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.fromEmail" class="col-2">Email:</label>
                    <div class="col-10">
                        @Html.Raw(Model.bridgeGreetings.fromEmail)
                    </div>
                </div>
            </div>
        </div>

        <div class="button">
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a href="/"></a>

            <div class="button">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a href="/"></a>
            </div>

        </div>
    </div>
</div>